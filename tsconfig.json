{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
